<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/back41"
    android:orientation="vertical" >

    <Button
        android:id="@+id/b2player"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="76dp"
        android:background="#262D97"
        android:text="2 Players" />

    <Button
        android:id="@+id/b1player"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/b2player"
        android:layout_alignLeft="@+id/b2player"
        android:layout_alignRight="@+id/b2player"
        android:layout_marginBottom="36dp"
        android:background="#262D97"
        android:text="1 Player" />

</RelativeLayout>
